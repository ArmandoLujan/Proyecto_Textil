    public void iniciar(MAIN p)
    {
     jprincipal= p;
     jprincipal.deserializarProductos();
     mostrar();
    }

    public void mostrar()
    {
    try{
        dft = (DefaultTableModel)jTable1.getModel();
        
        for(CH_PRODUCTOS produ: jprincipal.pdproductos)
        {
           Object[] fila= new Object[3];
           fila[0]= String.valueOf(produ.getNombre());
           fila[1]= produ.getCantidad();
           fila[2]= Double.valueOf(produ.getPrecio());
           dft.addRow(fila);
        }
        
        }catch(Exception e1)
        {
        JOptionPane.showMessageDialog(null, e1.getMessage());
        }
    }
