    private void crearActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        try
        {
            String nombre = jtnombre.getText();
            int cantidad= Integer.parseInt(jtcantidad.getText());
            double precio = Double.parseDouble(jtprecio.getText());
            
            CH_PRODUCTOS produ= new CH_PRODUCTOS(nombre, cantidad, precio);
            
            jprincipal.pdproductos.add(produ);
            jprincipal.serializarProductos();
            
           Object[] fila= new Object[3];
           fila[0]= produ.getNombre();
           fila[1]= produ.getCantidad();
           fila[2]= produ.getPrecio();
           
           dft.addRow(fila);
        }
        catch(Exception e1)
        {
          JOptionPane.showMessageDialog(null, "Error al crear objeto");
        }
    }                                     

    private void exportaActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        EXP_PRODUCTO xport = new EXP_PRODUCTO(null, true);
        xport.iniciar( this);
        xport.setVisible(true);
    }                                       

