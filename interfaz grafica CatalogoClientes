    private void creaActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
        try
        {
            String codigo = jtCode.getText();
            String nombre = jtnombre.getText();
            
            CH_CLIENTES client= new CH_CLIENTES(codigo, nombre);
            
            jprincipal.clclientes.add(client);
            jprincipal.serializarObjetos();
            
           Object[] fila= new Object[3];
           fila[0]= client.getCodigo();
           fila[1]= client.getNombre();
           
           
           dft1.addRow(fila);
        }
        catch(Exception e1)
        {
          JOptionPane.showMessageDialog(null, "Error al crear objeto");
        }
         
    }                                    

    private void exportaActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        EXP_CLIENTE ExCli = new EXP_CLIENTE(null, true);
        ExCli.iniciar( this);
        ExCli.setVisible(true);
    }                                       

