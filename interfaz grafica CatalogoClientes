    public void iniciar(MAIN p)
    {
     jprincipal= p;
     jprincipal.deserializarObjetos();
     mostrar();
    }
    
    public void mostrar()
    {
    try{
        dft1 = (DefaultTableModel)jCliente1.getModel();
        
        for(CH_CLIENTES client: jprincipal.clclientes)
        {
           Object[] fila= new Object[2];
           fila[0]= String.valueOf(client.getCodigo());
           fila[1]= client.getNombre();
           dft1.addRow(fila);
        }
        
        }catch(Exception e1)
        {
        JOptionPane.showMessageDialog(null, e1.getMessage());
        }
    }

