    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try
        {
            String nombre= jtNombre.getText();
            String cantidad = String.valueOf(jtCantidad.getText());
            String precio= String.valueOf(jtPrecioUnitario.getText());
            
            CH_PRODUCTOS pd= new CH_PRODUCTOS(nombre, cantidad, precio);

            jprincipal.pdproductos.add(pd);
            jprincipal.serializarProductos();

            Object[] fila= new Object[3];
            fila[0]= pd.getNombre();
            fila[1]= pd.getCantidad();
            fila[2]= pd.getPrecio();

            dft.addRow(fila);
        }
        catch(Exception e1)
        {
            JOptionPane.showMessageDialog(null, "Error al crear objeto");
        }
    }                                        

