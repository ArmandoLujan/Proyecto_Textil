    public void iniciar(MAIN p)
    {
     this.jprincipal =p;
     try{
        dft = (DefaultTableModel)jTable1.getModel();
        
        
        int conta=0;
        for(CH_PRODUCTOS pd: jprincipal.pdproductos)
        {
            conta++;
           Object[] fila= new Object[3];
           fila[0]= pd.getNombre();
           fila[1]= pd.getCantidad();
           fila[2]= pd.getPrecio();
          
                  
           
           dft.addRow(fila);
        }
        
        }catch(Exception e1)
        {
        JOptionPane.showMessageDialog(null, e1.getMessage());
        }
    }

